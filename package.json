{
  "name": "vs-code-lm-extension",
  "displayName": "VS Code Language Model Tools",
  "description": "VS Code extension providing tools for language model integration",
  "version": "0.0.1",
  "publisher": "shannonlal",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-code-lm-extension.listOpenEditors",
        "title": "List Open Editors"
      },
      {
        "command": "vs-code-lm-extension.getConfigurationSetting",
        "title": "Get Configuration Setting"
      },
      {
        "command": "vs-code-lm-extension.revealFileInExplorer",
        "title": "Reveal File in Explorer"
      }
    ],
    "languageModelTools": [
      {
        "name": "vscode-lm-tools_listOpenEditors",
        "tags": ["editors"],
        "toolReferenceName": "listOpenEditors",
        "displayName": "List Open Editors",
        "modelDescription": "Lists all open editors in VS Code with their details including file paths, language types, and status (dirty/clean, active/inactive)",
        "inputSchema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false,
          "description": "No parameters required"
        }
      },
      {
        "name": "vscode-lm-tools_getConfigurationSetting",
        "tags": ["configuration"],
        "toolReferenceName": "getConfigurationSetting",
        "displayName": "Get Configuration Setting",
        "modelDescription": "Retrieves the value of a specified VS Code configuration setting",
        "inputSchema": {
          "type": "object",
          "properties": {
            "settingName": {
              "type": "string",
              "description": "Name of the VS Code setting to retrieve"
            }
          },
          "required": ["settingName"],
          "additionalProperties": false
        }
      },
      {
        "name": "vscode-lm-tools_revealFileInExplorer",
        "tags": ["explorer", "navigation"],
        "toolReferenceName": "revealFileInExplorer",
        "displayName": "Reveal File in Explorer",
        "modelDescription": "Reveals and selects a specified file in the VS Code Explorer sidebar",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Path to the file to reveal"
            }
          },
          "required": ["filePath"],
          "additionalProperties": false
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonlal/vs-code-lm-extension.git"
  },
  "keywords": [
    "vscode",
    "language model",
    "tools",
    "extension"
  ],
  "license": "MIT"
}